{
  "layer": "top",
  "position": "top",
  "reload_style_on_change": true,
  "modules-left": [
    "custom/notification",
    "clock",
    "custom/terminal",
    "tray",
    "mpris",
  ],
  // "modules-center": ["hyprland/workspaces"],
  "modules-right": ["group/expand", "pulseaudio", "battery", "custom/power"],

  "modules-center": ["hyprland/workspaces"],

  "mpris": {
    "format": "{artist} - {title}",
    "format-playing": "{artist} - {title}  Ôäã",
    "format-paused": "{artist} - {title}  ÔÖÑ",
    "player": "playerctld",
    "tooltip": true,
    "on-click": "playerctl play-pause",
    "on-click-forward": "playerctl next",
    "on-click-backward": "playerctl previous",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "format-icons": {
      "Playing": " Ôäã ",
      "Paused": " ÔÖÑ ",
    },
    "max-length": 40,
    "scrolling": true, // enable marquee scrolling
    "scrolling-speed": 0.05, // lower = slower, higher = faster
    "scrolling-delay": 2, // pause before starting to scroll (seconds)
  },

  "hyprland/workspaces": {
    "format": "{icon}{windows}",
    "format-window-separator": "",
    "workspace-taskbar": {
      "enable": true,
      "update-active-window": true,
      "format": "{icon}",
      "icon-size": 18,
      "on-click": "${SCRIPTS}/focus-window.sh {address} {button}",
    },
  },

