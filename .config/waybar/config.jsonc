  "custom/notification": {
    "tooltip": false,
    //"format": "Û∞éü",
    "format": "{}",
    "exec": "~/.config/waybar/scripts/notification_status.sh",
    "on-click": "swaync-client -t -sw",
    "interval": 60,
    "escape": true,
  },
  "clock": {
    "format": "{:%a, %d %b %I:%M %p} ",
    "interval": 15,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "today": "<span color='#fAfBfC'><b>{}</b></span>",
      },
    },
    "actions": {
      "on-click-right": "shift_down",
      "on-click": "shift_up",
    },
  },
  "network": {
    "format-wifi": "Ôá´",
    "format-ethernet": "Óºâ",
    "format-disconnected": "Ó¨Å",
    "interval": 60,
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} üñß ",
    "on-click": "~/.config/waybar/scripts/toggle-network-gui.sh",
  },
  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "Û∞Ç≤",
    "interval": 60,
    "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
    "format-alt": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{num_connections} connected",
    "tooltip-format-connected": "{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_battery_percentage}%",
    "on-click": "~/.config/waybar/scripts/toggle-bluetooth-gui.sh",
    "on-click-right": "~/.config/hypr/scripts/toggle-bluetooth.sh",
  },
  "battery": {
    "interval": 30,
    "states": {
      "good": 80,
      "warning": 40,
      "critical": 20,
    },
    "tooltip-format": "{time}\t{capacity}%",
    "format": "{icon}",
    "format-critical": "{capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ Û∞ÇÑ",
    "format-alt": "{capacity}% {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÅ", "ÔâÄ"],
    "events": {
      "on-discharging-critical": "notify-send -u critical -t 5000 'Battery Critical!' 'Your battery level is low.'",
    },
  },
